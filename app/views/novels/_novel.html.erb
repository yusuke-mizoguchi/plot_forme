<% if (novel.release != "draft") && current_user&.role == "writer" %>
  <%= render 'novel_date', {novel: novel} %>
<% elsif (novel.release == "release" || novel.release == "reader") && current_user&.role == "reader" %>
  <%= render 'novel_date', {novel: novel} %>
<% elsif novel.release == "release" %>
  <%= render 'novel_date', {novel: novel} %>
<% end %>
